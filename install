#!/usr/bin/env bash

set -e

REPO="willfish/sniffy"

# Fetch latest release tag
LATEST_TAG=$(curl -s https://api.github.com/repos/$REPO/releases/latest | grep "tag_name" | cut -d '"' -f 4)

if [ -z "$LATEST_TAG" ]; then
  echo "‚ùå Failed to fetch latest release."
  exit 1
fi

echo "üîç Latest version: $LATEST_TAG"

# Detect OS and architecture
OS=$(uname -s | tr '[:upper:]' '[:lower:]')
ARCH=$(uname -m)

# Normalize architecture names
case $ARCH in
  x86_64)
    ARCH="amd64"
    ;;
  aarch64|arm64)
    ARCH="arm64"
    ;;
  *)
    echo "‚ùå Unsupported architecture: $ARCH"
    echo "Supported: amd64, arm64"
    exit 1
    ;;
esac

# Check for supported OS
case $OS in
  linux|darwin)
    ;;
  *)
    echo "‚ùå Unsupported operating system: $OS"
    echo "Supported: Linux, macOS"
    exit 1
    ;;
esac

BINARY="sniffy-${OS}-${ARCH}"
URL="https://github.com/$REPO/releases/download/$LATEST_TAG/$BINARY"

echo "üöÄ Downloading Sniffy for $OS-$ARCH..."
echo "üì• URL: $URL"

# Download binary
if ! curl -L -f -o sniffy "$URL"; then
  echo "‚ùå Failed to download binary from $URL"
  echo "Please check if the release exists for your platform."
  exit 1
fi

# Make executable
chmod +x sniffy

# Install to /usr/local/bin (requires sudo)
if [ -w "/usr/local/bin" ]; then
  mv sniffy /usr/local/bin/sniffy
else
  echo "üîê Installing to /usr/local/bin (requires sudo)..."
  sudo mv sniffy /usr/local/bin/sniffy
fi

echo "‚úÖ Successfully installed Sniffy $LATEST_TAG"
echo "üéâ Run 'sniffy' to get started!"

# Verify installation
if command -v sniffy >/dev/null 2>&1; then
  echo "üîç Installation verified: $(which sniffy)"
else
  echo "‚ö†Ô∏è  Warning: sniffy not found in PATH. You may need to add /usr/local/bin to your PATH."
fi
